@import "common"

body
  padding 10px 50px
  font 14px Helvetica, Arial, sans-serif
  background-color #FFF

a
  color #00B7FF

input, textarea, input[type="submit"], button
  margin 3px
  border 1px solid
  b-r 3px
  height 18px

input[type="submit"], button
  background-color #EEE
  border-color #AAA
  height 22px

nav
  padding 5px
  b-r 5px
  b-s 1px 1px 3px #888
  background-color #FFF
  border-color #AAA
  text-align right
  a
    padding 0 10px

aside.menu
  margin-top 10px
  padding 0 5px
  a
    padding 0 10px
  .sub-menu
    font-size 0.9em
    a
      color #11002B

div.section-body
  padding 5px

header
  b-r 5px 5px 0 0
  padding 5px
  bg-l-g (#E6E9F2)
  color #555
  font-size 18px
  text-align center
  letter-spacing 0.1em

footer
  b-r 0 0 5px 5px
  padding 5px 10px
  border-top 1px solid #AAA

div.section-title
  font-size 16px
  letter-spacing 0.1em

div.line
  margin 0 50px
  border-bottom 1px solid #888

section#main
  padding 5px 5px 20px 5px

span.space
  display inline-block
  width 5px
  height 5px

div.form-field
  label
    display inline-block
    width 80px
    vertical-align top
    margin-top 5px
  input, textarea
    width 200px
  textarea
    height 80px

div.form-actions
  text-align right

#container
  margin 0 auto
  width 950px

#login, #signup
  margin 5px auto
  width 320px
  b-r 5px
  b-s 1px 1px 3px #888
  border-color #AAA

.ui-button
  margin-left -1px

.ui-button-icon-only .ui-button-text
  padding 0.35em

.ui-autocomplete-input
  //margin 0
