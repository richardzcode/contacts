!!!
html
  head
    title= _page_title + ' - ' + _app_title
    link(rel='stylesheet', href='/stylesheets/style.css')
    - if (_css)
      - _css.forEach(function(item) {
        link(rel='stylesheet', href='/stylesheets/' + item)
      - })
  body
    #container
      include _navbar
      h1= _page_title
      p Welcome to our site
      include _messages
      != body
    script(type='text/javascript', src='/javascript/jquery-1.7.1.min.js')
    - if (_js)
      - _js.forEach(function(item) {
        script(type='text/javascript', src='/javascript/' + item)
      - })

